package part1;

import java.util.Scanner;

public class Library {

	public static void main(String[] args) {
		Book book1 = new Book();
		book1.title = "Harry Potter and the Sorceror’s Stone";
		book1.setAuthor("J.K. Rowling");
		book1.pubYear = 1997;
		
		Book book2 = new Book();
		book2.setTitle("Cloudy with a Chance of Meatballs");
		book2.setGenre("Children’s");
		book2.setPubYear(1978);
		
		Book book3 = new Book();
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter author:");
		String author = sc.next();
		book3.setAuthor(author);
		
		System.out.print("Enter title:");
		String title = sc.next();
		book3.title = title;
		
		System.out.print("Enter genre:");
		String genre = sc.next();
		book3.genre = genre;
		
		System.out.print("Enter publication year:");
		int year = sc.nextInt();
		book3.pubYear = year;
		System.out.print("Enter paperback(true/false):");
		boolean paper = sc.nextBoolean();
		
	
	}

}
