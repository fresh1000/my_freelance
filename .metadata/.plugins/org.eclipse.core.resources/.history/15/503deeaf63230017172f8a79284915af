import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.util.ArrayList;
import java.util.Scanner;

public class Enrolment {

	public static void main(String[] args) throws FileNotFoundException {
		File file1 = new File("student1.txt");
		FileReader file = new FileReader(file1);
		Scanner input = new Scanner(file);
		
		String lineStud;
		String[] lineVec;
		String firstName = null;
		String lastName = null;
		String course = null;
		int studentNumber = 0;
		String account = null;
		String fullName;
		String email;
		int countLine = 0;
		
		while (input.hasNextLine()) {
			if(countLine == 0) {
				lineStud = input.nextLine();
				lineVec = lineStud.split(" ");
				firstName = lineVec[2];
			}
			if(countLine == 1) {
				lineStud = input.nextLine();
				lineVec = lineStud.split(" ");
				lastName = lineVec[2];
			}
			if(countLine == 2) {
				lineStud = input.nextLine();
				lineVec = lineStud.split(" ");
				course = lineVec[1];
			}
			if(countLine == 3) {
				lineStud = input.nextLine();
				lineVec = lineStud.split(" ");
				studentNumber = Integer.parseInt(lineVec[2]);
			}
			if(countLine == 4) {
				lineStud = input.nextLine();
				lineVec = lineStud.split(" ");
				account = lineVec[1];
			}
			countLine++;
		}
		
		fullName = firstName + " " + lastName;
		email = account + "@uow.edu.au";
		course += "E";
		Student std = new Student(fullName, studentNumber, email, course);
		std.displayStudInfo();
		
		
		
		
